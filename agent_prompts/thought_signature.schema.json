{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "ThoughtSignature",
    "type": "object",
    "properties": {
        "iteration": {
            "type": "integer"
        },
        "summary": {
            "type": "string"
        },
        "artifacts": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "status": {
            "type": "string",
            "enum": [
                "planning",
                "generating",
                "testing",
                "analyzing",
                "fixing",
                "completed",
                "failed"
            ]
        }
    },
    "required": [
        "iteration",
        "summary",
        "status"
    ]
}